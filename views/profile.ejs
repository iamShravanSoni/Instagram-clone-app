    <section class="top-bar">
      <button class="top-bar__back-btn"><i class="material-icons"><%= user.username %></i></button>
      <div class="top-bar__title">        
        <h1 class="top-bar__title__text"><a href="/home">instagram</a></h1>
        <img class='top-bar__title__verified-icon' src="https://s3-us-west-2.amazonaws.com/s.cdpn.io/2053557/kisspng-social-media-instagram-verified-badge-symbol-compu-5b1eedb5aba638.1612204615287535897031.jpg" alt="verified-icon"></div>
      <button class="top-bar__menu-btn"><i class="material-icons"><%= user.username %></i></button>
    </section>
    <section class="stats">
      <div class="stats__img-holder" style="background-image: url('/images/uploads/<%= user.profileimage %>');">      
      </div>
      <div class="stats__data">
        <div class="stats__data__point">
          
          <div class="stats__data__point__value">6,126</div>
          <div class="stats__data__point__description">Posts</div>
        </div>
        <div class="stats__data__point">
          <div class="stats__data__point__value">317 M</div>
          <div class="stats__data__point__description">Followers</div>
        </div>
        <div class="stats__data__point">
          <div class="stats__data__point__value">225</div>
          <div class="stats__data__point__description">Following</div>
        </div>
      </div>      
    </section>
    <section class="description">
      <h2 class="decription__title"><%= user.firstname %><%= user.lastname %></h2>
      <p>
        <%= user.bio %> ❤️
      </p>
    </section>
    <section class="actions">
      <button class="actions__btn actions__btn--active" ><a href="/edit">Edit profile</a></button>
      <button class="actions__btn"><a href="/logout">Logout</a></button>
      <button class="actions__btn actions__btn--icon"><i class="material-icons"></i></button>
    </section>
